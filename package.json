{
	"name": "whop-sdk-ts",
	"private": true,
	"scripts": {
		"build": "turbo build",
		"check-types": "turbo run check-types",
		"dev": "turbo run dev",
		"lint": "biome check .",
		"lint:fix": "biome check --write --unsafe .",
		"postinstall": "lefthook install",
		"release": "turbo build --filter=\"@whop/*...\" && changeset publish"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@changesets/cli": "^2.29.4",
		"lefthook": "1.11.13",
		"turbo": "2.5.3",
		"typescript": "5.8.3"
	},
	"packageManager": "pnpm@9.15.9",
	"engines": {
		"node": "22.x",
		"pnpm": "9.15.9"
	}
}
