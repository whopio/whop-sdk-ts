{
	"$schema": "https://turborepo.org/schema.json",
	"extends": ["//"],
	"tasks": {
		"build": {
			"cache": true,
			"outputs": ["dist/**"],
			"inputs": ["src/**"],
			"dependsOn": ["^build"]
		},
		"deploy": {
			"dependsOn": ["build"],
			"passThroughEnv": ["CLOUDFLARE_API_TOKEN", "CLOUDFLARE_ACCOUNT_ID"]
		},
		"deploy:canary": {
			"dependsOn": ["build"],
			"passThroughEnv": ["CLOUDFLARE_API_TOKEN", "CLOUDFLARE_ACCOUNT_ID"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"check-types": {
			"cache": false,
			"dependsOn": ["build"]
		},
		"lint:fix": {
			"cache": false,
			"dependsOn": ["build"]
		}
	}
}
