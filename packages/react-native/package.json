{
	"name": "@whop/react-native",
	"description": "React Native SDK for building embedded apps on Whop",
	"version": "0.0.22",
	"repository": {
		"type": "git",
		"url": "https://github.com/whopio/whop-sdk-ts",
		"directory": "packages/react-native"
	},
	"keywords": ["whop", "react-native", "sdk", "embedded", "apps", "payments"],
	"bugs": "https://github.com/whopio/whop-sdk-ts/issues",
	"homepage": "https://whop.com/developers/",
	"license": "MIT",
	"exports": {
		".": {
			"types": "./dist/lib/index.d.ts",
			"import": "./dist/lib/index.mjs",
			"require": "./dist/lib/index.cjs"
		},
		"./web": {
			"types": "./dist/lib/web.d.ts",
			"import": "./dist/lib/web.mjs"
		}
	},
	"main": "./dist/lib/index.cjs",
	"module": "./dist/lib/index.mjs",
	"types": "./dist/lib/index.d.ts",
	"files": ["dist"],
	"bin": {
		"whop-react-native": "./dist/cli/index.js"
	},
	"scripts": {
		"build": "pnpm run clean && tsup && cp src/cli/*.js dist/cli",
		"clean": "rm -rf dist",
		"dev": "tsup --watch",
		"check-types": "tsc --noEmit",
		"lint:fix": "biome check --write --unsafe"
	},
	"dependencies": {
		"@babel/core": "7.28.0",
		"@babel/plugin-transform-export-namespace-from": "7.27.1",
		"@babel/preset-env": "7.28.0",
		"@babel/runtime": "7.27.6",
		"@react-native/babel-preset": "0.80.1",
		"@react-native/metro-config": "0.80.1",
		"@whop/api": "workspace:*",
		"@whop/iframe": "workspace:*",
		"dotenv": "16.5.0",
		"esbuild": "0.25.9",
		"events": "3.3.0",
		"find-up": "7.0.0",
		"jszip": "3.10.1",
		"metro": "0.83.0",
		"metro-react-native-babel-transformer": "0.77.0",
		"qrcode-terminal": "0.12.0",
		"rimraf": "6.0.1"
	},
	"devDependencies": {
		"@types/babel__core": "7.20.5",
		"@types/node": "latest",
		"@types/qrcode-terminal": "0.12.2",
		"@types/react": "19.1.5",
		"react": "19.1.0",
		"react-native": "0.80.0",
		"react-native-reanimated": "3.18.0",
		"tsup": "8.5.0",
		"typescript": "latest"
	},
	"packageManager": "pnpm@9.15.9",
	"engines": {
		"node": "22.x",
		"pnpm": "9.15.9"
	},
	"publishConfig": {
		"access": "public"
	},
	"peerDependencies": {
		"react": "19.1.0",
		"react-dom": "19.1.0",
		"react-native": "0.80.0",
		"react-native-web": "0.21.1",
		"react-native-nitro-modules": "0.26.3",
		"react-native-video": "6.16.1",
		"@d11/react-native-fast-image": "8.10.0",
		"react-native-svg": "15.12.0",
		"react-native-webview": "13.15.0",
		"react-native-reanimated": "3.18.0",
		"react-native-gesture-handler": "2.27.2",
		"react-native-haptic-feedback": "2.3.3",
		"react-native-vision-camera": "4.7.1",
		"react-native-safe-area-context": "5.5.2",
		"lottie-react-native": "7.3.4",
		"react-native-image-picker": "8.2.1"
	},
	"peerDependenciesMeta": {
		"react-native-nitro-modules": {
			"optional": true
		},
		"react-native-video": {
			"optional": true
		},
		"@d11/react-native-fast-image": {
			"optional": true
		},
		"react-native-svg": {
			"optional": true
		},
		"react-native-webview": {
			"optional": true
		},
		"react-native-reanimated": {
			"optional": true
		},
		"react-native-gesture-handler": {
			"optional": true
		},
		"react-native-haptic-feedback": {
			"optional": true
		},
		"react-native-vision-camera": {
			"optional": true
		},
		"react-native-safe-area-context": {
			"optional": true
		},
		"lottie-react-native": {
			"optional": true
		},
		"react-native-image-picker": {
			"optional": true
		}
	}
}
