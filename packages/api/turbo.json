{
	"$schema": "https://turborepo.org/schema.json",
	"extends": ["//"],
	"tasks": {
		"build": {
			"cache": true,
			"outputs": ["dist/**"],
			"inputs": ["src/**"],
			"dependsOn": ["^build", "build:proto", "build:graphql"],
			"env": ["BUILD_GRAPHQL_ORIGIN"]
		},
		"build:proto": {
			"cache": false
		},
		"build:graphql": {
			"cache": true,
			"inputs": ["codegen.ts", "graphql/**"],
			"outputs": ["src/codegen/**", "!src/codegen/proto/**"]
		},
		"lint:fix": {
			"cache": false,
			"dependsOn": ["build"]
		},
		"dev": {
			"cache": false,
			"persistent": true,
			"dependsOn": ["build"]
		},
		"check-types": {
			"cache": false,
			"dependsOn": ["lint:fix"]
		}
	}
}
